<!-- Bloque conceptual: Visual tipo "infraestructura visual" -->
<section id="VolumenesDockerConceptual" class="bg-gradient-to-b from-gray-50 to-white py-16 px-6">
  <div class="max-w-6xl mx-auto space-y-12">
    <h2 class="text-4xl font-extrabold text-center text-gray-900">
